% layout 'default', title 'На кухне есть все рецепты';
<%#= test %>
<%= form_for 'kitchen'=>(method=>'post')=>begin %>
<table>
%foreach my $key(keys %{$recipes}){
  <tr><td><%= check_box 'recipeid'=>$recipes->{$key}{'ID'} %>&nbsp;<a class="recipelist" href="/recipe/edit/<%= $recipes->{$key}{'ID'} %>"><%= $recipes->{$key}{'RECIPE'}%></a></td><td><a class=button href="/kitchen/delete/<%= $recipes->{$key}{'ID'}%>">Удалить рецепт</a></td></tr>
%}
<tr><td colspan=2 align=center><br/><%= submit_button 'Новое меню' %><% end %></td></tr></table>
